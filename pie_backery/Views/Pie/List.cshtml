
@model PiesListViewModel

<h1>@Model.CurrentCategory</h1><br /><br />

<div class="row">
    @foreach (var pie in Model.Pies)
    {
    <div class="col-sm-3 col-lg-3 col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="thumbnail">
                    <img class="img1" src="@pie.ImageThumbnailUrl" />
                    <div class="caption">
                        <h3 class="pull-right">@pie.Price.ToString("C")</h3>
                        <h3>

                           
                            <a href="@Url.Action("longDescrip","Pie",@pie)">@pie.Name</a>
                        </h3>
                        <p>@pie.ShortDescription</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>

